<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="module_document_hub_category" model="ir.module.category">
        <field name="name">Document hub</field>
        <field name="description">Allows you to advanced manage your documents.</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_document_hub_document_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_document_hub_category"/>
    </record>

    <record id="group_document_hub_document_officer" model="res.groups">
        <field name="name">Officer</field>
        <field name="implied_ids" eval="[(4, ref('group_document_hub_document_user'))]"/>
        <field name="category_id" ref="module_document_hub_category"/>
    </record>

    <record id="group_document_hub_document_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_document_hub_category"/>
        <field name="implied_ids" eval="[(4, ref('group_document_hub_document_officer'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="document_hub_document_multi_company" model="ir.rule">
            <field name="name">Document hub Multi-Company</field>    
            <field name="model_id" ref="model_document_hub_document"/>    
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>
        
        <record id="document_hub_folder_multi_company" model="ir.rule">
            <field name="name">Document hub folder Multi-Company</field>    
            <field name="model_id" ref="model_document_hub_folder"/>    
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>

        <record id="documents_hub_document_manager_rule" model="ir.rule">
            <field name="name">Document hub document: manager rule</field>
            <field name="model_id" ref="model_document_hub_document"/>
            <field name="groups" eval="[(4, ref('document_hub.group_document_hub_document_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record id="documents_hub_folder_manager_rule" model="ir.rule">
            <field name="name">Document hub folder: manager rule</field>
            <field name="model_id" ref="model_document_hub_folder"/>
            <field name="groups" eval="[(4, ref('document_hub.group_document_hub_document_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

        <record id="documents_hub_tag_manager_rule" model="ir.rule">
            <field name="name">Document hub tag: manager rule</field>
            <field name="model_id" ref="model_document_hub_tag"/>
            <field name="groups" eval="[(4, ref('document_hub.group_document_hub_document_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

    </data>
    
</odoo>